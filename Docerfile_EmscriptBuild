#specify the base OS
From ubuntu:16.04

#Running apt updates on OS
ENV DEBIAN_FRONTEND noninteractive

RUN sed -i -- 's/#deb-src/deb-src/g' /etc/apt/sources.list && sed -i -- 's/# deb-src/deb-src/g' /etc/apt/sources.list

RUN apt-get update -y 

#RUN apt-get upgrade -y


#Running installations on the os

RUN apt-get install git -y 

RUN apt-get install cmake -y

RUN apt-get install g++ -y

RUN apt-get install vim -y

RUN apt-get install wget -y

RUN apt-get install jsdoc-toolkit -y

RUN apt-get build-dep csound -y 


#setting um emsdk

RUN git clone https://github.com/emscripten-core/emsdk.git
RUN cd emsdk/
RUN git pull
RUN ./emsdk install latest
RUN ./emsdk activate latest
RUN cd ..



#Running build commands once container starts
CMD git clone https://github.com/csound/csound.git && cd /home/csound/Emscripten && ./download_and_build_libsndfile.sh && ./build.sh && ./release.sh

ENV DEBIAN_FRONTEND teletype


